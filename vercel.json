{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/courses/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/enrollments/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/documents/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

